<strong><%=user.first_name%> <%=user.last_name%></strong>
<div class="user-email"><%=user.username%> </div>
<%if(locals.currentUser && locals.currentUser.admin === true){%>
    <div class="user-membership">Member?: <%=user.membership%></div>
    <div class="user-admin">Admin?: <%=user.admin%></div>  
<%}%>
<% if(posts.length){ %>
    <ul class="posts-list">
        <% for(let post of posts){ %>
            <li>
                <a href="<%=post.url%>">
                    <strong>
                        <div class="post-publish-date"><%=post.publish_date_formatted%></a>
                    </strong>
                </a>
                <div class="post-content"><%=post.message%></div>
            </li>
        <% } %>
    </ul>
<% } %>
<%if(locals.currentUser._id === user._id){%>
    <a href="<%= `/users/user/${user._id}/delete`%>">Delete</a>
    <a href="<%= `/users/user/${user._id}/update`%>">Update</a>
<%}%>