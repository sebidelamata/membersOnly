<h1><%=title%></h1>
<form method="POST">
    <div class="form-group">
        <label for="message">Message:</label>
        <textarea name="message" placeholder="Type your post here...">
            <%= !message ? "" : message.message%>
        </textarea>
        <% if(message !== null){ %>
            <input type="hidden" value=<%=message.user_id%> name="user_id">
            <input type="hidden" value=<%=message._id%> name="_id">
        <% } %>
        <button type="submit">Submit</button>
    </div>
</form>
<% if(errors !== null){ %>
    <ul>
        <% for(let error of errors){ %>
            <li>error.msg</li>
        <% } %>
    </ul>
<% } %>